pipeline {
    agent {
            docker {
                image 'docker:latest'
                args '-v /var/run/docker.sock:/var/run/docker.sock'
            }
        }

    environment {
        REGISTRY_URL = "registry.georgio-sorin.fr"
        DOCKER_IMAGE_NAME = "api-webflow"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    def branchName = "${env.BRANCH_NAME}".replaceAll("/", "-")
                    def packageVersion = readFile('package.json').trim().split('"version": "')[1].split('"')[0]
                    sh "docker build -t ${REGISTRY_URL}/${DOCKER_IMAGE_NAME}:${branchName}-${packageVersion} ."
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    sh "docker login -u ${env.DOCKER_REGISTRY_USERNAME} -p ${env.DOCKER_REGISTRY_PASSWORD} ${REGISTRY_URL}"
                    def branchName = "${env.BRANCH_NAME}".replaceAll("/", "-")
                    def packageVersion = readFile('package.json').trim().split('"version": "')[1].split('"')[0]
                    sh "docker push ${REGISTRY_URL}/${DOCKER_IMAGE_NAME}:${branchName}-${packageVersion}"
                }
            }
        }
    }
}
