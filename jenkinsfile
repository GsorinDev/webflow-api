pipeline {
    agent any

    environment {
        REGISTRY_URL = "registry.georgio-sorin.fr"
        DOCKER_IMAGE_NAME = "api-webflow"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    def packageVersion = readFile('package.json').trim().split('"version": "')[1].split('"')[0]
                    sh "sudo docker build -t ${REGISTRY_URL}/${DOCKER_IMAGE_NAME}:${packageVersion} ."
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    sh "docker login -u ${env.DOCKER_REGISTRY_USERNAME} -p ${env.DOCKER_REGISTRY_PASSWORD} ${REGISTRY_URL}"
                    def packageVersion = readFile('package.json').trim().split('"version": "')[1].split('"')[0]
                    sh "sudo docker push ${REGISTRY_URL}/${DOCKER_IMAGE_NAME}:${packageVersion}"
                }
            }
        }
    }
}
